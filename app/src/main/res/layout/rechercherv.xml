<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Titre"
        android:layout_width="506dp"
        android:layout_height="98dp"
        android:text="Consulter Un Rapport De Visite"
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

    <Button
        android:id="@+id/afficher"
        android:layout_width="654dp"
        android:layout_height="137dp"
        android:onClick="AfficherRapports"
        android:text="Afficher Le Rapport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Titre"
        app:layout_constraintStart_toStartOf="@+id/Titre"
        app:layout_constraintTop_toBottomOf="@+id/Titre"
        app:layout_constraintVertical_bias="0.283" />

    <Spinner
        android:id="@+id/spinner1"
        style="@android:style/Widget.Material.Spinner"
        android:layout_width="377dp"
        android:layout_height="93dp"
        android:backgroundTint="#B023FEC6"
        android:scrollbarSize="30px"
        android:textAlignment="textEnd"
        android:textSize="80px"
        app:layout_constraintBottom_toTopOf="@+id/afficher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Titre"
        app:layout_constraintVertical_bias="0.615" />

    <TextView
        android:id="@+id/date"
        android:layout_width="413dp"
        android:layout_height="91dp"
        android:text="Selectionnez Un Rapport :"
        android:textSize="25px"
        app:layout_constraintBottom_toTopOf="@+id/afficher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881" />

    <TextView
        android:id="@+id/Rapport"
        android:layout_width="671dp"
        android:layout_height="249dp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text=""
        android:textSize="35px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/afficher"
        app:layout_constraintVertical_bias="0.058" />

    <Button
        android:id="@+id/buttonEchan"
        android:layout_width="226dp"
        android:layout_height="68dp"
        android:layout_marginTop="40dp"
        android:onClick="listeEchantillons"
        android:text="Liste Echantillons Offerts"
        app:layout_constraintEnd_toEndOf="@+id/Rapport"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/Rapport"
        app:layout_constraintTop_toBottomOf="@+id/Rapport" />


    <TextView
        android:id="@+id/Offre"
        android:layout_width="541dp"
        android:layout_height="158dp"
        android:layout_marginTop="40dp"
        android:textSize="30px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/Rapport"
        app:layout_constraintHorizontal_bias="0.438"
        app:layout_constraintStart_toStartOf="@+id/Rapport"
        app:layout_constraintTop_toBottomOf="@+id/buttonEchan"
        app:layout_constraintVertical_bias="0.042" />

</androidx.constraintlayout.widget.ConstraintLayout>